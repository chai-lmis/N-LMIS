<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chai.inv.ManualLGAStockEntryGridController">
   <top>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <HBox spacing="3.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleAddEditLGAStockAction" text="Manual LGA's Stock Entry">
                     <graphic>
                        <ImageView fitHeight="23.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../../../resources/icons/file_add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="5.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </top>
   <center>
      <TableView fx:id="lgaStockEntryTable" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="productColumn" prefWidth="86.0" text="Product" />
            <TableColumn fx:id="stockBalColumn" prefWidth="86.0" style="-fx-alignment: center-right;" text="Stock Balance" />
            <TableColumn fx:id="prevStockBalColumn" prefWidth="91.0" style="-fx-alignment: center-right;" text="Previous Stock Balance" />
            <TableColumn fx:id="stockBalEditedOnColumn" prefWidth="86.0" style="-fx-alignment: center-right;" text="Stock Balance Edited On" />
            <TableColumn fx:id="warehouseIdColumn" prefWidth="86.0" text="Warehouse Id" visible="false" />
            <TableColumn fx:id="defaultOrderingStoreIdColumn" prefWidth="86.0" text="Default Ordering Store Id" visible="false" />
            <TableColumn fx:id="productIdColumn" prefWidth="86.0" text="Product Id" visible="false" />
            <TableColumn fx:id="lgaStockEntryIdColumn" prefWidth="86.0" text="LGA Stock Entry Id" visible="false" />
         </columns>
      </TableView>
   </center>
   <bottom>
      <HBox prefHeight="68.0" prefWidth="900.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#handleHomeDashBoardBtn" prefHeight="44.0" prefWidth="61.0" text="Home">
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../resources/icons/home.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
         <padding>
            <Insets left="30.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
